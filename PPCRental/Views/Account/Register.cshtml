
@{
    ViewBag.Title = "Đăng ký";
    Layout = "~/Views/Shared/AccountLogin.cshtml";
}

<div @*class="m-login__signup"*@>
    <div class="m-login__head">
        <h3 class="m-login__title">
            Chào mừng bạn đến với PPCRental
        </h3>
        <div class="m-login__desc">
            Hãy điền đầy đủ thông tin phía dưới để tạo tài khoản:
        </div>
    </div>
    <form class="m-login__form m-form" action="@Url.Action("Register", "Account")" method="post">
        <div class="form-group m-form__group">
            <input class="form-control m-input" type="text" placeholder="Họ và Tên" name="fullname" required>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" type="text" placeholder="Địa chỉ Email" name="email" autocomplete="off" required>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" type="text" placeholder="Địa chỉ" name="address" autocomplete="off" required>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" type="text" placeholder="Số điện thoại" name="phone" autocomplete="off" required>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input" type="password" placeholder="Mật khẩu" name="password" required>
        </div>
        <div class="form-group m-form__group">
            <input class="form-control m-input m-login__form-input--last" type="password" placeholder="Xác nhận Mật khẩu" name="rpassword" required>
        </div>
        <!-- <div class="row form-group m-form__group m-login__form-sub">
            <div class="col m--align-left">
                <label class="m-checkbox m-checkbox--light">
                    <input type="checkbox" name="agree">
                    I Agree the
                    <a href="#" class="m-link m-link--focus">
                        terms and conditions
                    </a>
                    .
                    <span></span>
                </label>
                <span class="m-form__help"></span>
            </div>
        </div> -->
        <div class="m-login__form-action">
            <button type="submit" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn m-login__btn--primary">
                Đăng ký
            </button>
            &nbsp;&nbsp;
            <button id="m_login_signup_cancel" class="btn m-btn m-btn--pill m-btn--custom m-btn--air m-login__btn">
                Quay lại
            </button>
        </div>
    </form>
</div>