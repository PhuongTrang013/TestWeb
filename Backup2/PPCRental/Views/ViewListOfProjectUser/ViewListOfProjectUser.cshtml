            @{foreach (var item in Model)
                {
                    <div class="col-sm-6 col-md-4">
                        <a href="/Details/DetailsIndex/@item.ID">
                            <div class="thumbnail">
                                <img src="~/Images/@item.Images" />
                                <div class="caption">
                                    <h3>@item.PropertyName</h3>
                                    <p>@item.Price @item.UnitPrice</p>
                                    <p>Đường @item.Street_ID ,Phường @item.Ward_ID ,Quận @item.District_ID</p>
